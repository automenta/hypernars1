{
  "name": "hypernars",
  "version": "0.1.0",
  "description": "Non-Axiomatic Reasoning System on Hypergraphs",
  "main": "src/NAR.js",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "build": "babel src --out-dir dist --copy-files --extensions .js",
    "start:tui": "node dist/tui.js",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "lint": "eslint \"src/**/*.js\"",
    "lint:fix": "eslint --fix \"src/**/*.js\""
  },
  "keywords": [
    "nars",
    "reasoning",
    "ai",
    "hypergraph"
  ],
  "author": "",
  "dependencies": {
    "ink": "^5.2.1",
    "ink-select-input": "^6.2.0",
    "ink-text-input": "^6.0.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.0",
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.32.0",
    "eslint": "^9.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "prettier": "^3.6.2"
  },
  "jest": {
    "testMatch": [
      "**/src/**/*.test.js",
      "**/src/tests/**/*.js",
      "**/src/test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
